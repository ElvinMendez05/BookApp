<div class="container my-5">
  <div class="card shadow-sm border-0">
    <div class="card-body p-4">
      <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-pencil-square me-2"></i>
        {{#if editMode}}Editar Autor: {{autor.nombre}}{{else}}Crear Nuevo Autor{{/if}}
      </h2>

      <form action="/autores/{{#if editMode}}edit{{else}}create{{/if}}" method="POST">
        <!-- Nombre -->
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold">
            <i class="bi bi-person-fill me-1"></i>Nombre del Autor
          </label>
          <input
            type="text"
            class="form-control shadow-sm"
            id="nombre"
            name="nombre"
            required
            placeholder="Ej: Gabriel García Márquez"
            value="{{#if editMode}}{{autor.nombre}}{{/if}}"
          >
        </div>

        <!-- Correo -->
        <div class="mb-3">
          <label for="correo" class="form-label fw-semibold">
            <i class="bi bi-envelope-fill me-1"></i>Correo del Autor
          </label>
          <input
            type="email"
            class="form-control shadow-sm"
            id="correo"
            name="correo"
            required
            placeholder="Ej: autor@email.com"
            value="{{#if editMode}}{{autor.correo}}{{/if}}"
          >
        </div>

        {{#if editMode}}
          <input type="hidden" name="autorId" value="{{autor.id}}">
        {{/if}}

        <!-- Botones -->
        <div class="d-flex justify-content-between">
          <a href="/autores/index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{#if editMode}}Guardar Cambios{{else}}Crear{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
