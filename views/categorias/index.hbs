<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Mantenimiento de Categorías</h2>
    <a href="/categorias/create" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Nueva Categoría
    </a>
  </div>

  {{#if hasCategorias}}
    <div class="card shadow-sm border-0">
      <div class="card-body p-0">
        <table class="table table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th>Nombre</th>
              <th>Descripción</th>
              <th>Cantidad de Libros</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each categoriasList}}
              <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.descripcion}}</td>
                <td>{{this.Libros.length}}</td>
                <td>
                  <a href="/categorias/edit/{{this.id}}" class="btn btn-sm btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editar
                  </a>
                  <form action="/categorias/delete" method="POST" style="display:inline;">
                    <input type="hidden" name="caretegoriasId" value="{{this.id}}">
                    <button type="submit" class="btn btn-sm btn-danger">
                      <i class="bi bi-trash"></i> Eliminar
                    </button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{else}}
    <div class="alert alert-info mt-4">No hay categorías registradas.</div>
  {{/if}}
</div>
