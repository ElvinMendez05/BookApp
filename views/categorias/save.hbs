<div class="container my-5">
  <div class="card shadow-sm border-0">
    <div class="card-body p-4">
      <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-pencil-square me-2"></i>
        {{#if editMode}}Editar Categoría: {{categoria.nombre}}{{else}}Crear Nueva Categoría{{/if}}
      </h2>

      <form action="/categorias/{{#if editMode}}edit{{else}}create{{/if}}" method="POST">
        <!-- Nombre -->
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold">
            <i class="bi bi-tag me-1"></i>Nombre de la Categoría
          </label>
          <input
            type="text"
            class="form-control shadow-sm"
            id="nombre"
            name="nombre"
            required
            placeholder="Ej: Ficción"
            value="{{#if editMode}}{{categoria.nombre}}{{/if}}"
          >
        </div>

        <!-- Descripción -->
        <div class="mb-3">
          <label for="descripcion" class="form-label fw-semibold">
            <i class="bi bi-card-text me-1"></i>Descripción
          </label>
          <textarea
            class="form-control shadow-sm"
            id="descripcion"
            name="descripcion"
            rows="3"
            required
            placeholder="Describe esta categoría"
          >{{#if editMode}}{{categoria.descripcion}}{{/if}}</textarea>
        </div>

        {{#if editMode}}
          <input type="hidden" name="categoriasId" value="{{categoria.id}}">
        {{/if}}

        <!-- Botones -->
        <div class="d-flex justify-content-between">
          <a href="/categorias/index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{#if editMode}}Guardar Cambios{{else}}Crear{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
