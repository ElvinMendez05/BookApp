<div class="container my-5">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">üè¢ Mantenimiento de Editoriales</h2>
    <a href="/editoriales/create" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Crear nueva editorial
    </a>
  </div>

  {{#if hasEditoriales}}
    <!-- Listado de editoriales -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each editorialesList}}
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
              <h5 class="card-title fw-bold">{{this.nombre}}</h5>
              <p class="card-text text-muted mb-1">
                <i class="bi bi-telephone-fill me-1 text-primary"></i><strong>Tel√©fono:</strong> {{this.telefono}}
              </p>
              <p class="card-text text-muted mb-1">
                <i class="bi bi-geo-alt-fill me-1 text-success"></i><strong>Pa√≠s:</strong> {{this.pais}}
              </p>
              <p class="card-text text-muted mb-1">
                <i class="bi bi-journal-bookmark-fill me-1 text-warning"></i><strong>Libros asociados:</strong> {{this.Libros.length}}
              </p>
            </div>
            <div class="card-footer bg-white border-top-0">
              <div class="d-flex justify-content-end gap-2">
                <a href="/editoriales/edit/{{this.id}}" class="btn btn-primary btn-sm d-flex align-items-center gap-1">
                  <i class="bi bi-pencil-square"></i> Editar
                </a>
                <form method="POST" action="/editoriales/delete" class="m-0 p-0">
                  <input type="hidden" name="editorialesId" value="{{this.id}}" />
                  <button type="submit" class="btn btn-danger btn-sm d-flex align-items-center gap-1">
                    <i class="bi bi-trash3-fill"></i> Eliminar
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-sm-6">
        <div class="alert alert-info text-center" role="alert">
          <i class="bi bi-info-circle me-2"></i>
          No hay editoriales registradas actualmente.
        </div>
      </div>
    </div>
  {{/if}}
</div>

{{#section "scripts"}}
  <script src="/assets/js/site/editoriales/index.js"></script>
{{/section}}
