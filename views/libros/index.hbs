
<div class="container my-5">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">ðŸ“š Mantenimiento de Libros</h2>
    <a href="/libros/create" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Crear nuevo libro
    </a>
  </div>

  {{#if hasLibros}}
    <!-- Listado de libros -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each librosList}}
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <!-- Imagen del libro -->
            <img src="{{this.imagen}}" class="card-img-top rounded-top img-fluid" alt="Portada de {{this.titulo}}" style="height: 200px; object-fit: cover;">
            
            <div class="card-body">
              <h5 class="card-title fw-bold">{{this.titulo}}</h5>

              <!-- AÃ±o de publicaciÃ³n -->
              <p class="card-text text-muted mb-1">
                <i class="bi bi-calendar2-week me-1 text-primary"></i>
                <strong>AÃ±o:</strong> {{this.anioPublicacion}}
              </p>

              <!-- CategorÃ­a -->
              <p class="card-text text-muted mb-1">
                <i class="bi bi-tags-fill me-1 text-warning"></i>
                <strong>CategorÃ­a:</strong> {{this.categoria.nombre}}
              </p>

              <!-- Autor -->
              <p class="card-text text-muted mb-1">
                <i class="bi bi-person-fill me-1 text-success"></i>
                <strong>Autor:</strong> {{this.autore.nombre}}
              </p>

              <!-- Editorial -->
              <p class="card-text text-muted mb-1">
                <i class="bi bi-building me-1 text-info"></i>
                <strong>Editorial:</strong> {{this.editoriale.nombre}}
              </p>
            </div>

            <div class="card-footer bg-white border-top-0">
              <div class="d-flex justify-content-end gap-2">
                <!-- Editar -->
                <a href="/libros/edit/{{this.id}}" class="btn btn-primary btn-sm d-flex align-items-center gap-1">
                  <i class="bi bi-pencil-square"></i> Editar
                </a>

                <!-- Eliminar -->
                <form method="POST" action="/libros/delete" class="m-0 p-0">
                  <input type="hidden" name="librosId" value="{{this.id}}" />
                  <button type="submit" class="btn btn-danger delete-items btn-sm d-flex align-items-center gap-1">
                    <i class="bi bi-trash3-fill"></i> Eliminar
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <!-- No hay libros -->
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-sm-6">
        <div class="alert alert-info text-center" role="alert">
          <i class="bi bi-info-circle me-2"></i>
          No hay libros registrados actualmente.
        </div>
      </div>
    </div>
  {{/if}}
</div>

{{#section "scripts"}}
  <script src="/assets/js/site/libros/index.js"></script>
{{/section}}
